<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.gameproject.MultiplayerGameFinder"
      prefHeight="400.0" prefWidth="600.0" fx:id="GameFinderMainBody">
    <stylesheets>
        <URL value="@../Settings/StyleSheet.css" />
    </stylesheets>
    <ListView fx:id="GameFinderGamesView">

    </ListView>
    <HBox fx:id="GameFinderOptionsBar">
        <Button text="New Game" onAction="#createGame"/>
        <Button text="Join Game" onAction="#joinGame"/>
        <Button text="Refresh" onAction="#refreshList"/>
        <Button text="Back" onAction="#backButton"/>
    </HBox>

</VBox>
